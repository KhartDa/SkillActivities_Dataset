Table activity {
  Activity_Id integer [primary key]
  Activity_Title text
  Activity_Price text
  Academics_Id integer [ref: >academics.Academics_Id]
 
  difficulty_id integer [ref: > activity_difficulty.Difficulty_Id]
}

Table activity_occurrence {
  Occurrence_Id integer [primary key]
  Activity_Id integer [not null, ref: > activity.Activity_Id] 
  Start_Date date
  End_Date date
  Start_Time time
  End_Time time
  Timezone text
}

Table activity_difficulty {
  Difficulty_Id integer [primary key]
  name varchar
  pressure integer
  length integer
  experience text
  expectations text
}


Table academics {
  Academics_Id integer [primary key]
  Academic_Name text
  Academics_Difficulty text
  type text
}



